%h1 Listado de Productos

%p#notice= notice

.grid_8
  %table
    %tr
      %th Nombre
      %th Precio
      %th Marca
      %th Acciones

    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.base_price
        %td= product.brand_name
        %td
          =  link_to 'Show', product
          =  link_to 'Edit', edit_product_path(product)
          =  link_to 'Destroy', product, :confirm => 'Estas seguro?', :method => :delete

.grid_4
  = link_to 'Registrar Producto', new_product_path
